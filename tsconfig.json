{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,              // Gỡ bỏ hoặc đổi thành false nếu cần emit file (Vite tự xử lý)
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "outDir": "./dist"          // Thêm để chỉ định thư mục output (nếu cần emit)
  },
  "include": ["src"],
  "exclude": ["node_modules"]   // Thêm để loại trừ thư mục không cần thiết
}